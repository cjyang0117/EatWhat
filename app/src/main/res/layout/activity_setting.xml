<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".settingAct">
    <ScrollView
        android:id="@+id/sc1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@color/white"
        android:visibility="visible"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="設定喜好程度"/>
            <CheckBox
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t1"
                android:layout_marginStart="20dp"
                android:drawableTop="@drawable/price_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="價格"
                android:textColor="@color/darkgray" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="100"
                android:progress="50"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                android:layout_marginStart="120dp"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7" />

            <CheckBox
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/flavor_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="口味"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <SeekBar
                android:id="@+id/seekBar4"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="100"
                android:progress="50"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintEnd_toEndOf="@+id/seekBar3"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <CheckBox
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/thumb_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="店價評價"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <SeekBar
                android:id="@+id/seekBar5"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="100"
                android:progress="50"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="@+id/seekBar4"
                app:layout_constraintTop_toTopOf="@+id/imageView9" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="332dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:onClick="gotoreset"
                android:background="@drawable/main2activity_button_activity"
                android:text="@string/finish"
                android:textColor="@color/darkgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>