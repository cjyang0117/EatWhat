<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreAct"
    tools:layout_editor_absoluteY="81dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/activity_store">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="47dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/mname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RatingBar
            android:id="@+id/store_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/colorGrassDark"
            style="?android:attr/ratingBarStyleIndicator"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#3b3b3b"
            android:rating="5"
            android:stepSize="0.5"
            android:layout_marginLeft="25dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="91dp" />

        <Button
            android:id="@+id/commit"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="評論"/>
    </LinearLayout>

    <TextView
        android:id="@+id/storecell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="47dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/storeaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="47dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <ScrollView
        android:id="@+id/sc2"
        android:layout_width="368dp"
        android:layout_height="370dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:id="@+id/storeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="5dp"></TableLayout>
    </ScrollView>

</LinearLayout>
