<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpAct2"
    android:id="@+id/signupdrawer">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@drawable/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="@string/signUp"
            app:titleTextColor="#9d7f62" />

    <ScrollView
        android:id="@+id/sc1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/inputLikeLevel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/chk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/rice_signup_selector"
                android:gravity="center"
                android:text="@string/rice"
                android:textColor="@color/darkgray"
                app:layout_constraintEnd_toStartOf="@+id/chk5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <CheckBox
                android:id="@+id/chk5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:button="@null"
                android:drawableTop="@drawable/noodles_signup_selector"
                android:gravity="center"
                android:text="@string/noodles"
                android:textColor="@color/darkgray"
                app:layout_constraintEnd_toStartOf="@+id/chk7"
                app:layout_constraintStart_toEndOf="@+id/chk2"
                app:layout_constraintTop_toTopOf="@+id/chk2" />

            <CheckBox
                android:id="@+id/chk7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:button="@null"
                android:drawableTop="@drawable/dumpling_signup_selector"
                android:gravity="center"
                android:text="@string/dumpling"
                android:textColor="@color/darkgray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chk5"
                app:layout_constraintTop_toTopOf="@+id/chk5" />


            <CheckBox
                android:id="@+id/chk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/hamburger_signup_selector"
                android:gravity="center"
                android:text="@string/burger"
                android:textColor="@color/darkgray"
                app:layout_constraintEnd_toStartOf="@+id/chk6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chk2" />

            <CheckBox
                android:id="@+id/chk6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:button="@null"
                android:drawableTop="@drawable/hotpot_signup_selector"
                android:gravity="center"
                android:text="@string/pot"
                android:textColor="@color/darkgray"
                app:layout_constraintEnd_toStartOf="@+id/chk3"
                app:layout_constraintStart_toEndOf="@+id/chk1"
                app:layout_constraintTop_toTopOf="@+id/chk1" />

            <CheckBox
                android:id="@+id/chk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:button="@null"
                android:drawableTop="@drawable/porridge_signup_selector"
                android:gravity="center"
                android:text="@string/porridge"
                android:textColor="@color/darkgray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chk6"
                app:layout_constraintTop_toTopOf="@+id/chk6" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:contentDescription=""
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chk6"
                app:srcCompat="@drawable/dash" />

            <CheckBox
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/chili_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/spicy"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toStartOf="@+id/chk1"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <CheckBox
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/frenchfries_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/fries"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="5"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/chk3"
                app:layout_constraintStart_toStartOf="@+id/chk6"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="5"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/chk3"
                app:layout_constraintStart_toStartOf="@+id/chk6"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="11dp"
                android:layout_marginTop="8dp"
                android:contentDescription=""
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:srcCompat="@drawable/dash" />

            <CheckBox
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/price_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="價格"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="100"
                android:progress="50"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="@+id/chk3"
                app:layout_constraintStart_toStartOf="@+id/chk6"
                app:layout_constraintTop_toTopOf="@+id/imageView7" />

            <CheckBox
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/flavor_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="口味"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <SeekBar
                android:id="@+id/seekBar4"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="100"
                android:progress="50"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintEnd_toEndOf="@+id/chk3"
                app:layout_constraintStart_toStartOf="@+id/chk6"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <CheckBox
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:drawableTop="@drawable/thumb_signup"
                android:enabled="false"
                android:gravity="center"
                android:text="店家評價"
                android:textColor="@color/darkgray"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <SeekBar
                android:id="@+id/seekBar5"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:max="100"
                android:progress="50"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="@+id/chk3"
                app:layout_constraintStart_toStartOf="@+id/chk6"
                app:layout_constraintTop_toTopOf="@+id/imageView9" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="332dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/main2activity_button_activity"
                android:onClick="gotoSignin"
                android:text="@string/finish"
                android:textColor="@color/darkgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="喜好程度"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="重視程度"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>