<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ebfafd">

    <ScrollView
        android:id="@+id/sc2"
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/sc" >

        <TableLayout
            android:id="@+id/storecommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="5dp"></TableLayout>

    </ScrollView>
    <RatingBar
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#FFF8C6"
        android:clickable="true"
        android:id="@+id/store_rate"
        android:layout_gravity="center"
        android:progressBackgroundTint="@color/colorGrassDark"
        style="?android:attr/ratingBarStyleIndicator"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="5"
        android:isIndicator="false"/>

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="264dp"
        android:layout_height="110dp"
        android:layout_below="@+id/store_rate"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/ed1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sc"
            android:layout_marginStart="26dp"
            android:layout_marginTop="-16dp"
            android:background="#ffffff"
            android:maxLength="100"
            android:minLines="5"
            android:textColor="#000" />

    </ScrollView>　

    <Button
        android:id="@+id/submit"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="95dp"
        android:layout_toEndOf="@+id/sc"
        android:text="提交" />
</RelativeLayout>