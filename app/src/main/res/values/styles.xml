<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#666665</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#666665</item> <!-- activated color change as you wish -->
    </style>

    <style name="forgotAccPass" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFDEAD</item>
        <item name="colorPrimaryDark">#f5c883</item>
        <item name="colorAccent">#bfada771</item>
        <item name="android:textColorPrimary">#9b855f</item>
    </style>

    <style name="skinPrimaryDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#fae5af</item>
        <item name="android:textColorPrimary">#9b855f</item>
        <item name="android:textColorHint">#c79b855f</item>
        <item name="android:colorControlNormal">#adb59b</item>

    </style>

    <style name="storeInf" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#fae5af</item>
        <item name="android:textColorPrimary">#b08a4e</item>
        <item name="colorPrimary">#FFF</item>
        <item name="colorAccent">#bfada771</item>

    </style>

    <style name="search" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/Transparent</item>
    </style>

    <style name="signUp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#fae5af</item>
        <item name="colorAccent">#C7815D</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorControlNormal">#deaa50</item>
        <item name="colorControlActivated">#deaa50</item>
    </style>

    <style name="main2Activity" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#835a4d</item>
        <item name="colorPrimaryDark">#6c4a40</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#795548</item>
    </style>
</resources>
